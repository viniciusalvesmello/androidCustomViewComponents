<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButton" parent="android:Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomButton.Primary" parent="CustomButton">
        <item name="android:background">@drawable/custom_button_primary_background</item>
        <item name="customButtonDisabledTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="CustomButton.Secondary" parent="CustomButton">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:background">@drawable/custom_button_secondary_background</item>
        <item name="customButtonDisabledTextColor">?attr/colorOnPrimary</item>
    </style>
</resources>